{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015", "dom"],
    "types": ["cypress", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "**/*.cy.js",
    "**/*.cy.jsx",
    "**/*.d.ts","cypress/**/*.ts",
    "cypress/**/*.ts",             // Include Cypress TypeScript files
    "cypress/**/*.d.ts",
    "node_modules/cypress"
  ]
}